{
	"background": {
		"scripts": [
			"js/jquery-3.2.1.min.js",
			"js/background.js"
		]
	},
	"browser_action": {
		"default_icon": "img/sentry-tower-off.png",
		"default_popup": "html/popup.html",
		"default_title": "Sentry Tower"
	},
	"description": "Active monitor for Sentry error logs. Define the queries you'd like to monitor and notification will appear for new errors.",
	"icons": {
		"48": "img/sentry-tower-48.png",
		"128": "img/sentry-tower.png"
	},
	"manifest_version": 2,
	"name": "Sentry Tower",
	"options_page": "html/settings.html",
	"permissions": [
		"storage",
		"notifications"
	],
	"version": "1.0.0"
}
