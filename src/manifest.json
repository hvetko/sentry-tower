{
	"manifest_version": 2,
	"name": "Sentry Tower",
	"description": "Sentry Monitor",
	"version": "1.0",
	"background": {
		"scripts": [
			"js/jquery-3.1.0.min.js",
			"js/sentry-tower.js",
			"js/background.js"
		]
	},
	"permissions": [
		"storage",
		"http://*/*",
		"https://*/*"
	],
	"icons": {
		"128": "img/tower.png",
		"16": "img/tower.png",
		"48": "img/tower.png"
	},
	"browser_action": {
		"default_icon": "img/tower-off.png",
		"default_popup": "html/popup.html",
		"default_title": "Sentry Tower"
	}
}
